            position: relative;
        }
        .grunge-border {
            border: 1px solid #333;
            box-shadow: 0 0 5px #00ffc833, 0 0 10px #00ffc811 inset;
        }
        .header-glow {
            text-shadow: 0 0 5px #00FFFF, 0 0 10px #00FFFF88;
        }
        
        /* –°—Ç–∏–ª—å –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏ —Ü–∏—Ñ—Ä –Ω–∞ –¥–∞—à–±–æ—Ä–¥–µ (—ç—Ñ—Ñ–µ–∫—Ç –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è) */
        @keyframes counter {
            0% { opacity: 0; transform: scale(0.9); }
            50% { opacity: 1; transform: scale(1.1); }
            100% { transform: scale(1); }
        }
        .animated-number {
            animation: counter 0.4s ease-out;
        }
        
        /* –°—Ç–∏–ª—å –¥–ª—è —Å–∫—Ä—ã—Ç–æ–π –∫–Ω–æ–ø–∫–∏ –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è */
        #page-switcher {
            position: fixed;
            bottom: 10px; /* –ü–æ–º–µ–Ω—å—à–µ –æ—Ç—Å—Ç—É–ø */
            right: 10px; /* –ü–æ–º–µ–Ω—å—à–µ –æ—Ç—Å—Ç—É–ø */
            z-index: 100;
            cursor: pointer;
            /* –°–ª–µ–≥–∫–∞ –≤–∏–¥–Ω–æ: –º–∞–ª–µ–Ω—å–∫–∏–π —à—Ä–∏—Ñ—Ç, –Ω–∏–∑–∫–∞—è –Ω–µ–ø—Ä–æ–∑—Ä–∞—á–Ω–æ—Å—Ç—å, —Ç–µ–º–Ω—ã–π —Ñ–æ–Ω */
            opacity: 0.3;
            font-size: 10px; /* –û—á–µ–Ω—å –º–∞–ª–µ–Ω—å–∫–∏–π —à—Ä–∏—Ñ—Ç */
            padding: 4px 8px; /* –ú–∞–ª–µ–Ω—å–∫–∏–µ –æ—Ç—Å—Ç—É–ø—ã */
            transition: opacity 0.3s, transform 0.2s;
        }
        #page-switcher:hover {
            opacity: 1;
            transform: translateY(-1px);
        }
    </style>
    
    <!-- ========================================================= -->
    <!-- 2. –õ–û–ì–ò–ö–ê: Firebase, –ü–∞—Ä–æ–ª—å –∏ –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ "–°—Ç—Ä–∞–Ω–∏—Ü" -->
    <!-- ========================================================= -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, setDoc, getDoc, onSnapshot, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        
        setLogLevel('Debug');
        
        // –ì–õ–û–ë–ê–õ–¨–ù–´–ï –ü–ï–†–ï–ú–ï–ù–ù–´–ï FIREBASE
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : null;
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let db;
        let auth;
        let currentUserId = 'unknown';
        const DOCUMENT_ID = 'smartcity_launch_control'; 
        const MANAGER_PASSWORD = '0702'; // –í–∞—à —Å–µ–∫—Ä–µ—Ç–Ω—ã–π –ø–∞—Ä–æ–ª—å
        
        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–≤—Ç–æ—Ä–Ω—ã—Ö –ø–æ–ø—ã—Ç–æ–∫
        async function fetchWithRetry(fn, maxRetries = 5) {
            for (let i = 0; i < maxRetries; i++) {
                try {
                    return await fn();
                } catch (error) {
                    if (i === maxRetries - 1) throw error;
                    const delay = Math.pow(2, i) * 1000 + Math.random() * 1000;
                    await new Promise(resolve => setTimeout(resolve, delay));
                }
            }
        }

        // –†–µ–Ω–¥–µ—Ä –¥–∞–Ω–Ω—ã—Ö –Ω–∞ –¥–∞—à–±–æ—Ä–¥–µ
        function renderDashboard(data) {
            const dashboardEl = document.getElementById('manager-dashboard');
            if (!dashboardEl) return;
            
            const totalViews = data.totalViews || 0;
            const lastSeen = data.lastSeen ? new Date(data.lastSeen).toLocaleString('ru-RU') : 'N/A';
            const lastUserId = data.lastUserId || 'N/A';
            const ownerId = data.ownerUserId || 'N/A';

            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ HTML —Å –∞–Ω–∏–º–∏—Ä–æ–≤–∞–Ω–Ω—ã–º–∏ —Ü–∏—Ñ—Ä–∞–º–∏
            dashboardEl.innerHTML = `
                <div class="space-y-6 text-xl">
                    <p class="text-orange-400">ID –í–ª–∞–¥–µ–ª—å—Ü–∞ (–ü–µ—Ä–≤—ã–π –≤–∏–∑–∏—Ç): <span class="font-mono text-white break-all">${ownerId}</span></p>
                    <p class="text-cyan-400">–í–∞—à —Ç–µ–∫—É—â–∏–π ID: <span class="font-mono text-white break-all">${currentUserId}</span></p>
                    
                    <div class="bg-gray-800 p-6 rounded-lg grunge-border mt-8">
                        <h3 class="text-2xl font-bold text-red-400 mb-4">üìä –ú–µ—Ç—Ä–∏–∫–∏ –ü—Ä–æ—Å–º–æ—Ç—Ä–æ–≤</h3>
                        <div class="grid grid-cols-2 gap-4">
                            <div class="p-4 bg-gray-900 rounded-lg">
                                <p class="text-sm text-gray-400">–û–±—â–µ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ—Å–º–æ—Ç—Ä–æ–≤</p>
                                <p class="text-4xl font-extrabold text-green-400 animated-number" key="${totalViews}">${totalViews}</p>
                            </div>
                            <div class="p-4 bg-gray-900 rounded-lg">
                                <p class="text-sm text-gray-400">–í—Ä–µ–º—è –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –≤–∏–∑–∏—Ç–∞</p>
                                <p class="text-2xl font-bold text-white">${lastSeen}</p>
                            </div>
                            <div class="col-span-2 p-4 bg-gray-900 rounded-lg">
                                <p class="text-sm text-gray-400">ID –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è (–°–æ–∫—Ä–∞—â–µ–Ω–æ)</p>
                                <p class="text-xl font-mono text-yellow-400 break-all">${lastUserId.substring(0, 8)}...</p>
                                <p class="text-xs text-gray-500 mt-2">–ü–æ–ª–Ω—ã–π ID: ${lastUserId}</p>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }
        
        async function initializeFirebaseAndTrackVisit() {
            if (!firebaseConfig) return;

            try {
                // 1. –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
                const app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);

                // 2. –ê—É—Ç–µ–Ω—Ç–∏—Ñ–∏–∫–∞—Ü–∏—è
                let userCredential;
                if (initialAuthToken) {
                    userCredential = await fetchWithRetry(() => signInWithCustomToken(auth, initialAuthToken));
                } else {
                    userCredential = await fetchWithRetry(() => signInAnonymously(auth));
                }
                currentUserId = userCredential.user.uid;

                // 3. –û—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏–µ –≤–∏–∑–∏—Ç–∞ (–ü—Ä–æ—Å–º–æ—Ç—Ä —Å—Ç—Ä–∞–Ω–∏—Ü—ã)
                const projectDocRef = doc(db, `artifacts/${appId}/public/data/project_status`, DOCUMENT_ID);
                
                const docSnap = await fetchWithRetry(() => getDoc(projectDocRef));
                const currentStatus = docSnap.exists() ? docSnap.data() : { totalViews: 0, lastSeen: null, lastUserId: null };
                
                const newStatus = {
                    totalViews: (currentStatus.totalViews || 0) + 1,
                    lastSeen: new Date().toISOString(),
                    lastUserId: currentUserId,
                    ownerUserId: currentStatus.ownerUserId || currentUserId 
                };
                
                await fetchWithRetry(() => setDoc(projectDocRef, newStatus, { merge: true }));

                // 4. –ü–æ–¥–ø–∏—Å–∫–∞ –Ω–∞ –∏–∑–º–µ–Ω–µ–Ω–∏—è (–û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –Ω–∞ –¥–∞—à–±–æ—Ä–¥–µ)
                onSnapshot(projectDocRef, (snapshot) => {
                    if (snapshot.exists()) {
                        renderDashboard(snapshot.data());
                    }
                }, (error) => {
                    console.error("–û—à–∏–±–∫–∞ –ø–æ–¥–ø–∏—Å–∫–∏ Firestore:", error);
                    document.getElementById('manager-dashboard').innerHTML = '<p class="text-red-500">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö –∫–æ–Ω—Ç—Ä–æ–ª—è.</p>';
                });

            } catch (error) {
                console.error("–ö—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ Firebase:", error);
            }
        }
        
        // --- –õ–æ–≥–∏–∫–∞ –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è —Å—Ç—Ä–∞–Ω–∏—Ü (–°–∏–º—É–ª—è—Ü–∏—è) ---
        let isDashboardVisible = false;

        function toggleDashboardVisibility() {
            isDashboardVisible = !isDashboardVisible;
            const strategyView = document.getElementById('strategy-view');
            const dashboardView = document.getElementById('dashboard-view');
            const switcher = document.getElementById('page-switcher');

            if (isDashboardVisible) {
                strategyView.classList.add('hidden');
                dashboardView.classList.remove('hidden');
                switcher.textContent = '‚Üê –í–µ—Ä–Ω—É—Ç—å—Å—è –∫ –°—Ç—Ä–∞—Ç–µ–≥–∏–∏';
                switcher.classList.remove('bg-gray-900');
                switcher.classList.add('bg-green-900');
                switcher.classList.add('opacity-100'); // –î–µ–ª–∞–µ–º –∫–Ω–æ–ø–∫—É —è—Ä—á–µ, –∫–æ–≥–¥–∞ –¥–∞—à–±–æ—Ä–¥ –æ—Ç–∫—Ä—ã—Ç
                switcher.classList.remove('opacity-30');
                switcher.classList.remove('text-gray-700');
                switcher.classList.add('text-white');
            } else {
                strategyView.classList.remove('hidden');
                dashboardView.classList.add('hidden');
                switcher.textContent = 'üîí –î–∞—à–±–æ—Ä–¥ –ú–µ–Ω–µ–¥–∂–µ—Ä–∞';
                switcher.classList.remove('bg-green-900');
                switcher.classList.add('bg-gray-900');
                switcher.classList.remove('opacity-100'); // –°–Ω–æ–≤–∞ –¥–µ–ª–∞–µ–º –∫–Ω–æ–ø–∫—É –ø–æ–ª—É–ø—Ä–æ–∑—Ä–∞—á–Ω–æ–π
                switcher.classList.add('opacity-30');
                switcher.classList.add('text-gray-700');
                switcher.classList.remove('text-white');
            }
        }
        
        // –§—É–Ω–∫—Ü–∏—è, –≤—ã–∑—ã–≤–∞–µ–º–∞—è –ø–æ –∫–ª–∏–∫—É –Ω–∞ –∫–Ω–æ–ø–∫—É —Å –ø–∞—Ä–æ–ª–µ–º
        window.attemptLogin = function() {
            if (isDashboardVisible) {
                // –ï—Å–ª–∏ –¥–∞—à–±–æ—Ä–¥ —É–∂–µ –æ—Ç–∫—Ä—ã—Ç, –ø—Ä–æ—Å—Ç–æ –∑–∞–∫—Ä—ã–≤–∞–µ–º –±–µ–∑ –ø–∞—Ä–æ–ª—è
                toggleDashboardVisibility();
                return;
            }

            // NOTE: –ò—Å–ø–æ–ª—å–∑—É–µ–º prompt –¥–ª—è –≤–≤–æ–¥–∞ –ø–∞—Ä–æ–ª—è, —Ç–∞–∫ –∫–∞–∫ —ç—Ç–æ —Å–∞–º—ã–π –ø—Ä–æ—Å—Ç–æ–π —Å–ø–æ—Å–æ–±
            // –¥–æ–±–∞–≤–∏—Ç—å –∑–∞—â–∏—Ç–Ω—ã–π –±–∞—Ä—å–µ—Ä –≤ –æ–¥–Ω–æ–º —Ñ–∞–π–ª–µ.
            const password = prompt("–í–≤–µ–¥–∏—Ç–µ –ø–∞—Ä–æ–ª—å –¥–ª—è –¥–æ—Å—Ç—É–ø–∞ –∫ –î–∞—à–±–æ—Ä–¥—É –ú–µ–Ω–µ–¥–∂–µ—Ä–∞:");
            
            if (password === MANAGER_PASSWORD) {
                toggleDashboardVisibility();
            } else if (password !== null) {
                // –í–º–µ—Å—Ç–æ alert(), –ø—Ä–æ—Å—Ç–æ –≤—ã–≤–æ–¥–∏–º –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ –≤ –∫–æ–Ω—Å–æ–ª—å, —á—Ç–æ–±—ã –Ω–µ –ø—Ä–µ—Ä—ã–≤–∞—Ç—å UX.
                console.warn("–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å –≤–≤–µ–¥–µ–Ω: –¥–æ—Å—Ç—É–ø –∑–∞–ø—Ä–µ—â–µ–Ω.");
            }
        };


        // –ó–∞–ø—É—Å–∫ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ Firebase –∏ —Ä–µ–Ω–¥–µ—Ä–∏–Ω–≥ –ì–∞–Ω—Ç–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        window.onload = function() {
            initializeFirebaseAndTrackVisit();
            renderGanttChart();
            // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –Ω–∞—á–∞–ª—å–Ω–æ–≥–æ —Å—Ç–∏–ª—è –∫–Ω–æ–ø–∫–∏
            document.getElementById('page-switcher').classList.add('bg-gray-900', 'text-gray-700');
        };


        // =========================================================
        // –ì–∞–Ω—Ç-–ß–∞—Ä—Ç—ã (–û—Å—Ç–∞–≤–ª–µ–Ω–æ –±–µ–∑ –∏–∑–º–µ–Ω–µ–Ω–∏–π)
        // =========================================================
        window.getGanttData = function() {
            return [
                { day: 1, phase: '1. –°—Ç—Ä–∞—Ç–µ–≥–∏—è', task: '–ë—Ä–∏—Ñ–∏–Ω–≥, –∞–Ω–∞–ª–∏–∑ –¶–ê, –∫–æ–Ω–∫—É—Ä–µ–Ω—Ç–æ–≤', team: '–ü–ú, –°—Ç—Ä–∞—Ç–µ–≥', style: 'bg-yellow-600' },
                { day: 2, phase: '1. –°—Ç—Ä–∞—Ç–µ–≥–∏—è', task: '–†–∞–∑—Ä–∞–±–æ—Ç–∫–∞ –£–¢–ü –∏ –ö–æ–º–º—É–Ω–∏–∫–∞—Ü–∏–æ–Ω–Ω–æ–π —Å—Ç—Ä–∞—Ç–µ–≥–∏–∏', team: '–°—Ç—Ä–∞—Ç–µ–≥, –ü–ú', style: 'bg-yellow-600' },
                { day: 3, phase: '1. –°—Ç—Ä–∞—Ç–µ–≥–∏—è', task: '–°–±–æ—Ä —Ä–µ—Ñ–µ—Ä–µ–Ω—Å–æ–≤, —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∞ –¢–ó –¥–ª—è –∫—Ä–µ–∞—Ç–∏–≤–æ–≤', team: '–ö—Ä–µ–∞—Ç–æ—Ä—ã', style: 'bg-yellow-600' },
                { day: 4, phase: '1. –°—Ç—Ä–∞—Ç–µ–≥–∏—è', task: '–§–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–∏–µ –º–µ–¥–∏–∞–ø–ª–∞–Ω–∞, —Ä–∞—Å—á–µ—Ç CPA/ROMI', team: '–ü–ú, –¢–∞—Ä–≥–µ—Ç–æ–ª–æ–≥', style: 'bg-yellow-600' },
                { day: 5, phase: '1. –°—Ç—Ä–∞—Ç–µ–≥–∏—è', task: '–°–æ–∑–¥–∞–Ω–∏–µ —á–µ—Ä–Ω–æ–≤–∏–∫–æ–≤ –∫–ª—é—á–µ–≤—ã—Ö –∫—Ä–µ–∞—Ç–∏–≤–æ–≤', team: '–ö—Ä–µ–∞—Ç–æ—Ä—ã', style: 'bg-orange-600' },
                { day: 6, phase: '1. –°—Ç—Ä–∞—Ç–µ–≥–∏—è', task: '–°–æ–≥–ª–∞—Å–æ–≤–∞–Ω–∏–µ –°—Ç—Ä–∞—Ç–µ–≥–∏–∏ –∏ –ë—é–¥–∂–µ—Ç–∞ —Å –ö–ª–∏–µ–Ω—Ç–æ–º', team: '–ü–ú', style: 'bg-red-600 animate-pulse' }, 
                { day: 7, phase: '1. –°—Ç—Ä–∞—Ç–µ–≥–∏—è', task: '–§–∏–Ω–∞–ª—å–Ω–æ–µ —É—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ –∏ –∑–∞–ø—É—Å–∫ –ø—Ä–µ-–∫–∞–º–ø–∞–Ω–∏–∏ SMM', team: '–ü–ú, SMM', style: 'bg-green-600' },
                { day: 8, phase: '2. –ü—Ä–µ-–∑–∞–ø—É—Å–∫', task: '–ó–∞–ø—É—Å–∫ —Ç–µ—Å—Ç–æ–≤—ã—Ö –∫–∞–º–ø–∞–Ω–∏–π VK (–≥–∏–ø–æ—Ç–µ–∑—ã, –∞—É–¥–∏—Ç–æ—Ä–∏–∏)', team: '–¢–∞—Ä–≥–µ—Ç–æ–ª–æ–≥', style: 'bg-blue-600' },
                { day: 9, phase: '2. –ü—Ä–µ-–∑–∞–ø—É—Å–∫', task: '–°—ä–µ–º–∫–∞/–º–æ–Ω—Ç–∞–∂ –∫–æ—Ä–æ—Ç–∫–æ–≥–æ –ø—Ä–æ–º–æ-—Ä–æ–ª–∏–∫–∞', team: '–ö—Ä–µ–∞—Ç–æ—Ä—ã', style: 'bg-orange-600' },
                { day: 10, phase: '2. –ü—Ä–µ-–∑–∞–ø—É—Å–∫', task: '–ü–æ–∏—Å–∫ –∏ –ø–µ—Ä–≤—ã–π –∫–æ–Ω—Ç–∞–∫—Ç —Å 5 –º–∏–∫—Ä–æ-–±–ª–æ–≥–µ—Ä–∞–º–∏', team: 'SMM, –ü–ú', style: 'bg-indigo-600' },
                { day: 11, phase: '2. –ü—Ä–µ-–∑–∞–ø—É—Å–∫', task: '–ê–Ω–∞–ª–∏–∑ —Ç–µ—Å—Ç–æ–≤ VK, –∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä–æ–≤–∫–∞ —Å—Ç–∞–≤–æ–∫/–∫—Ä–µ–∞—Ç–∏–≤–æ–≤', team: '–¢–∞—Ä–≥–µ—Ç–æ–ª–æ–≥', style: 'bg-blue-600' },
                { day: 12, phase: '2. –ü—Ä–µ-–∑–∞–ø—É—Å–∫', task: '–ü—É–±–ª–∏–∫–∞—Ü–∏—è –ø–µ—Ä–≤–æ–≥–æ PR-–ø–æ—Å—Ç–∞ –≤ –ø—Ä–æ—Ñ–∏–ª—å–Ω–æ–º –¢–ì-–∫–∞–Ω–∞–ª–µ', team: 'SMM', style: 'bg-purple-600' },
